    <%- include('nav.ejs') %>
        <div class="container mt-5">
            <h1 class="text-center">Bem-vindo à UFPA - Bet</h1>
            <p class="text-center">Aposte com segurança e ganhe prêmios incríveis!</p>

            <div class="row mt-4">
                <!-- Card 1: Variedade de Apostas -->
